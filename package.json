{
  "name": "facebook-google-calendar-event-exporter",
  "version": "1.0.1",
  "description": "Browser extension that adds a 'Export to Google Calendar' option to Facebook's event export modal",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:release": "pnpm run clean && pnpm run build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "clean": "rimraf dist",
    "package": "pnpm run build:release && cd dist && bestzip ../facebook-google-calendar-exporter.zip *"
  },
  "keywords": [
    "facebook",
    "google-calendar",
    "browser-extension",
    "ics",
    "calendar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/chrome": "^0.1.37",
    "@types/node": "^25.3.0",
    "bestzip": "^2.2.1",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
